# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "wireless _first_"
order += "disk /"
# order += "load"
order += "cpu_usage"
order += "memory"
order += "volume master"
order += "battery all"
order += "tztime local"


volume master {
    format = " %volume"
    format_muted = "婢 muted"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}


cpu_usage {
    format = " %usage"
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

wireless _first_ {
    format_up = " %essid (%quality )"
    format_down = " no wifi"
}


battery all {
    format = "%status %percentage"
    status_chr = ""      # charging battery icon
    status_bat = ""      # normal battery icon
    status_full = ""
    format_down = "no batt"
    integer_battery_capacity = true
    last_full_capacity = true
}


disk "/" {
        format = " %avail"
        prefix_type = binary
        low_threshold = 5
}

# load {
#        format = "%1min"
# }

#memory {
#        format = "%used | %available"
#        threshold_degraded = "1G"
#        format_degraded = "MEMORY < %available"
#}

memory {
    format = " %used/%total"
    threshold_degraded = "10%"
    format_degraded = "MEM LOW: %free"
}

tztime local {
    format = " %Y-%m-%d %I:%M %p"
}
